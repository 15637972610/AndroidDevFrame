<?xml version="1.0" encoding="utf-8"?>
<com.dkp.shopping.utils.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dkp="http://schemas.android.com/apk/res/com.dkp.shopping"
    android:id="@+id/menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="none"
    dkp:rightPadding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <!--侧边抽屉 -->
        <LinearLayout
            android:id="@+id/id_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0EEE0"
            android:orientation="vertical">
        </LinearLayout>

        <!-- 内容区域 -->
        <include
            layout="@layout/activity_main_continer"
            />

    </LinearLayout>

</com.dkp.shopping.utils.SlidingMenu>
